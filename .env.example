# Server Configuration
PORT=3000
NODE_ENV=development

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here
# Comma-separated list of Telegram user IDs who can manage wallets via bot commands
# Get your user ID from @userinfobot on Telegram
TELEGRAM_ADMIN_USER_IDS=user_id1,user_id2

# Pushover Configuration (Static App Token)
# Users subscribe with their own user keys via /enable_pushover <user_key> command
# App token is shared across all subscribers
PUSHOVER_APP_TOKEN=your_pushover_app_token_here

# Solana Configuration
TARGET_TOKEN_MINT=your_target_token_mint_address_here

# Helius Configuration
HELIUS_API_KEY=your_helius_api_key
HELIUS_WEBHOOK_URL=https://your-domain.com/webhook

# Thresholds
TELEGRAM_THRESHOLD_USD=500
# PRICE_THRESHOLD_USD: Triggers Pushover alerts for:
#   1. Single swap >= this amount
#   2. Cumulative buys OR sells >= this amount within SWAP_TIME_WINDOW_SECONDS
PRICE_THRESHOLD_USD=300
# Time window in seconds for cumulative amount tracking (default: 3600 = 1 hour)
# After alert is sent, notifications are paused for this duration to prevent spam
SWAP_TIME_WINDOW_SECONDS=3600

# API Configuration
DEX_SCREENER_API_URL=https://api.dexscreener.com/latest/dex/tokens
PRICE_CACHE_TTL_SECONDS=60
